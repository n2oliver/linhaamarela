{
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Web\\": "./",
            "Db\\": "app/config/database/",
            "App\\Validators\\": "app/validators/",
            "App\\Controllers\\": "app/controllers/",
            "App\\UseCases\\": "app/usecases/",
            "App\\Repository\\": "app/repository/",
            "App\\Models\\": "app/models/"
        }
    },
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.5",
        "guzzlehttp/guzzle": "7.4",
        "illuminate/database": "^10.43",
        "illuminate/events": "^10.43",
        "firebase/php-jwt": "^6.2",
        "php-di/php-di": "^6.3",
        "php": "^8.0",
        "phpmailer/phpmailer": "^6.6",
        "vlucas/phpdotenv": "^5.4",
        "stripe/stripe-php": "^10.14"
    },
    "auto-scripts": {
        "cache:clear": "symfony-cmd",
        "assets:install %PUBLIC_DIR%": "symfony-cmd",
        "setup": "chmod -R 777 . && touch .env && echo DB_HOST=$DB_HOST >> .env && echo DB_USER=$DB_USER >> .env && echo DB_PASS=$DB_PASS >> .env && echo DB_NAME=$DB_NAME >> .env"
    },
    "post-update-cmd": [
        "@auto-scripts"
    ],
    "post-install-cmd": [
        "@auto-scripts"
    ]
}
